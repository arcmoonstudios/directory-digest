{
  "name": "directory-digest",
  "displayName": "Directory Digest",
  "publisher": "arcmoonstudios",
  "author": "Lord Xyn",
  "description": "Directory Digest",
  "version": "0.3.0",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcmoonstudios/directory-digest.git"
  },
  "galleryBanner": {
    "color": "#2F1754",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "directory",
    "file management",
    "content organization",
    "text processing",
    "file combining"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.appendDirectoryContent",
        "title": "Directory Digest: Combine Files",
        "category": "Directory Digest",
        "icon": "$(file-binary)",
        "description": "Combines all text files in the selected directory into a hidden dot-prefixed folder named after the selected directory (e.g., \".MyDirectoryFiles\")"
      },
      {
        "command": "extension.appendAllToOutputDir",
        "title": "Directory Digest: Create Markdown",
        "category": "Directory Digest",
        "icon": "$(files)",
        "description": "Concatenates all files in the selected directory into an organized structure in a hidden dot-prefixed folder named after the selected directory (e.g., \".MyDirectory\")"
      }
    ],
    "fileIcons": {
      "icons": {
        "ddconfig": {
          "description": "Directory Digest Configuration File",
          "file": "assets/icon.png",
          "fileExtensions": [
            "ddconfig"
          ],
          "fileNames": [
            ".ddconfig"
          ]
        },
        "directoryDigestFile": {
          "description": "Directory Digest Generated File",
          "file": "assets/icon.png",
          "fileExtensions": [
            "txt",
            "md",
            "json",
            "toon"
          ],
          "when": "resourceFilename =~ /\\.(.*)Files\\/.*\\.(txt|md|json)$/"
        }
      }
    },
    "folderIcons": {
      "icons": {
        "directoryDigestFolder": {
          "description": "Directory Digest Generated Folder",
          "folderNames": [
            ".*Files"
          ],
          "folder": "assets/icon.png"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.appendDirectoryContent",
          "group": "7_modification"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.appendAllToOutputDir",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.appendDirectoryContent",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.appendAllToOutputDir",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.appendDirectoryContent",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "explorerResourceIsFolder"
      },
      {
        "command": "extension.appendAllToOutputDir",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "explorerResourceIsFolder"
      }
    ]
  },
  "dependencies": {
    "glob": "11.0.3",
    "minimatch": "^10.0.3",
    "winston": "^3.17.0"
  }
}