{
  "name": "directory-digest",
  "displayName": "Directory Digest",
  "publisher": "arcmoonstudios",
  "author": "Lord Xyn",
  "description": "Directory Digest",
  "version": "0.2.2",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcmoonstudios/directory-digest.git"
  },
  "galleryBanner": {
    "color": "#2F1754",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "directory",
    "file management",
    "content organization",
    "text processing",
    "file combining"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
  "vscode:prepublish": "pnpm run compile && pnpm run bundle && pnpm run clean-out",
    "compile": "tsc -p ./",
    "bundle": "esbuild ./out/extension.js --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "tsc -watch -p ./",
  "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint ./src --ext .ts --fix",
    "clean-lock": "rimraf .vscode-test/user-data/Crashpad/pending",
  "pretest": "pnpm run clean-lock && rimraf out && pnpm run compile-tests && pnpm run compile && pnpm run bundle && pnpm run lint",
  "test": "node ./out/test/runTest.js",
  "posttest": "pnpm run clean-out",
  "clean-out": "rimraf out",
  "clean-logs": "rimraf .vscode-test ghlogs run-*.zip actions-*.zip || true",
  "install-hooks": "node ./scripts/install-hooks.js",
  "prepare": "node ./scripts/install-hooks.js",
    "build-and-show": "pnpm run compile && dir out"
  },
  "packageManager": "pnpm@10.17.1",
  "contributes": {
    "commands": [
      {
        "command": "extension.appendDirectoryContent",
        "title": "Directory Digest: Combine Files",
        "category": "Directory Digest",
        "icon": "$(file-binary)",
        "description": "Combines all text files in the selected directory into a hidden dot-prefixed folder named after the selected directory (e.g., \".MyDirectoryFiles\")"
      },
      {
        "command": "extension.appendAllToOutputDir",
        "title": "Directory Digest: Concatenate Entirety",
        "category": "Directory Digest",
        "icon": "$(files)",
        "description": "Concatenates all files in the selected directory into an organized structure in a hidden dot-prefixed folder named after the selected directory (e.g., \".MyDirectory\")"
      }
    ],
    "fileIcons": {
      "icons": {
        "ddconfig": {
          "description": "Directory Digest Configuration File",
          "file": "assets/icon.png",
          "fileExtensions": [
            "ddconfig"
          ],
          "fileNames": [
            ".ddconfig"
          ]
        },
        "directoryDigestFile": {
          "description": "Directory Digest Generated File",
          "file": "assets/icon.png",
          "fileExtensions": [
            "txt",
            "md",
            "json"
          ],
          "when": "resourceFilename =~ /\\.(.*)Files\\/.*\\.(txt|md|json)$/"
        }
      }
    },
    "folderIcons": {
      "icons": {
        "directoryDigestFolder": {
          "description": "Directory Digest Generated Folder",
          "folderNames": [
            ".*Files"
          ],
          "folder": "assets/icon.png"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.appendDirectoryContent",
          "group": "7_modification"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.appendAllToOutputDir",
          "group": "7_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.appendDirectoryContent",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.appendAllToOutputDir",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.appendDirectoryContent",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "explorerResourceIsFolder"
      },
      {
        "command": "extension.appendAllToOutputDir",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "explorerResourceIsFolder"
      }
    ]
  },
  "devDependencies": {
    "@eslint/js": "9.36.0",
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.14",
    "@types/vscode": "1.104.0",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@vscode/test-electron": "2.5.2",
  "@vscode/vsce": "3.6.1",
    "esbuild": "^0.25.10",
    "eslint": "9.36.0",
    "glob": "11.0.3",
    "mocha": "11.7.2",
    "rimraf": "^6.0.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "glob": "11.0.3",
    "minimatch": "^10.0.3",
    "winston": "^3.17.0"
  }
}
